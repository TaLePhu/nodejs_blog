
<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mb-4">
                <img src="{{this.image}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.title}}</p>
                    <a href="#" class="btn btn-primary">Đăng ký học</a>
                </div>
            </div>

        </div>
        {{/each}}
    </div>
</div>